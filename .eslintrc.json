{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb/base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "strict": [
            "error",
            "window"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": ["error", "single"],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always",
                "json": "always"
            }
        ]
    }
}
